<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="swp3.skku.edu.nemoya">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/nemo_mini"
        android:label="@string/app_name"
        android:roundIcon="@drawable/nemo_mini"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".HintNotifyService" />

        <activity
            android:name=".SettingPopupActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".CompletePopupActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".DeleteLevelPopupActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".CategoryActivity" />
        <activity android:name=".LevelSelection" />
        <activity android:name=".GameActivity" />
        <activity android:name=".LevelSelectionCustom" />
        <activity android:name=".GameCreateActivity" />
        <service
            android:name=".BackgroundMusicService"
            android:enabled="true"
            android:exported="true"/>
    </application>

</manifest>