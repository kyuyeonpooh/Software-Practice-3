<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#F6C903" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <stroke android:width="10dp" android:color="#D2FDFD" />
            <solid android:color="#D2FDFD" />
            <corners android:radius="20dp"/>
        </shape></item>

    <item android:top="50dp" android:bottom="10dp" android:right="50dp">
        <bitmap android:src="@drawable/yellow_star"
            android:gravity="center">
        </bitmap>
    </item>
    <item android:top="50dp" android:bottom="10dp">
        <bitmap android:src="@drawable/yellow_star"
            android:gravity="center">
        </bitmap>
    </item>
    <item android:top="50dp" android:bottom="10dp" android:left="50dp">
        <bitmap android:src="@drawable/yellow_star"
            android:gravity="center">
        </bitmap>
    </item>

</layer-list>